<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="uk.me.sa.android.do_not_disturb"
	android:versionCode="1"
	android:versionName="1.0">

	<uses-sdk
		android:minSdkVersion="25"
		android:targetSdkVersion="25"/>

	<application
		android:allowBackup="true"
		android:icon="@drawable/ic_event_do_not_disturb"
		android:label="@string/app_name"
		android:theme="@style/AppTheme"
		android:supportsRtl="true">
		
		<service
			android:name=".NotificationListener_"
			android:label="@string/app_name"
			android:permission="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE">
			<intent-filter>
				<action android:name="android.service.notification.NotificationListenerService"/>
				<action android:name="uk.me.sa.android.do_not_disturb.NotificationListener.ENABLE"/>
				<action android:name="uk.me.sa.android.do_not_disturb.NotificationListener.DISABLE"/>
				<action android:name="uk.me.sa.android.do_not_disturb.NotificationListener.EDIT"/>
			</intent-filter>
		</service>
		
		<activity
			android:name=".ui.MainActivity_"
			android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>

				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
	</application>
</manifest>
